                                    <a class="nav-link" asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Order" asp-action="Index">Orders</a>
                                </li>
                            }
                            <a class="nav-link nav-link" asp-controller="store" asp-action="Index">Home</a>
                               
                        </div>
                        @{int counter = 0;}
                        @foreach (var item in @cart.GetCartItems())
                        {
                            counter += item.Quantity;
                        }
                        <a class="btn px-0 d-flex align-items-center g-2" asp-controller="Cart" asp-action="Index">
                                <i class="fas fa-shopping-cart text-primary mr-1"></i>
                                <span class="badge text-secondary border border-secondary rounded-circle" style="padding-bottom: 2px;">@counter</span>
                        </a>

                        <partial name="_LoginPartial" />
                    </div>
                </nav>
            </div>
