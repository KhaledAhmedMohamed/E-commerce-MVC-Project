                        <span class="h2 text-uppercase text-dark bg-light px-2">Ama</span>
                        <span class="h2 text-uppercase text-light bg-primary px-2 ml-n1">zon</span>
                    </a>
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="RoleManager" asp-action="Index">Roles</a>
                                </li>
                            }
                            @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                                </li>
